<h1>ADMIN VIEW</h1>

<h2>User Profiles</h2>
<br><br>
{{#if accounts}}
    <h2>Admins</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each accounts}}
                {{#if isAdmin}}
                    <tr>
                        <div class="display-values">
                            <th scope="row">
                                <div class="display-values"><a href="/users/finduser/{{username}}">{{username}}</a></div>
                                    <div class="edit-menu">
                                        <form method="POST" action="/users/removePermisions/{{_id}}">
                                            <input type="submit" name="submit" value="remove admin">
                                        </form>
                                    </div>
                                </div>
                            </th>
                        </div>   
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
    </table>
    <br><br>
    <h2>Users</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each accounts}}
                {{#unless isAdmin}}
                    <tr>
                        <div class="display-values">
                            <th scope="row">
                                <div class="display-values"><a href="/users/finduser/{{username}}">{{username}}</a></div>
                                    <div class="edit-menu">
                                        <form method="POST" action="/users/addPermisions/{{_id}}">
                                            <input type="submit" name="submit" value="add admin">
                                        </form>
                                    </div>
                                </div>
                            </th>
                        </div>
                    </tr>
                {{/unless}}
            {{/each}}
        </tbody>
    </table>
{{/if}}

